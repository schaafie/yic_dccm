<h1>Show Content template</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @content_template.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @content_template.description %>
  </li>

  <li>
    <strong>Definition:</strong>
    <%= @content_template.definition %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.content_template_path(@conn, :edit, @content_template) %></span>
<span><%= link "Back", to: Routes.content_template_path(@conn, :index) %></span>
